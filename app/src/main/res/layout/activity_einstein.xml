<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EinsteinActivity"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C0DDC5"
        android:titleTextColor="#690C0C"
        android:titleMarginStart="120dp">

        <Button
            android:layout_width="60dp"
            android:layout_height="39dp"
            android:background="@drawable/back"
            android:id="@+id/back_arrow_einstein"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:gravity="center"
            android:layout_marginRight="90dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:textColor="#E20A0A"/>
    </Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#C41E1E"
            android:textSize="20dp"
            android:id="@+id/einstein_profession"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>



        <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:id="@+id/einstein_image"
        android:layout_gravity="center_vertical"/>

    </androidx.cardview.widget.CardView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:layout_gravity="center_vertical"
       android:weightSum="4">
    <ImageView
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="10dp"
       android:src="@drawable/cartoon"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
       android:layout_marginTop="10dp"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="3"
       android:padding="10dp"
       android:layout_gravity="center_vertical"
       android:layout_marginEnd="10dp"
       android:text="Click here to know more"
       android:textStyle="bold"
       android:id="@+id/einstein_knowmore"/>



   </LinearLayout>
</LinearLayout>